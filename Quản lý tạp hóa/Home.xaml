        </Border>
        <Border Name="TotalOrdeBorder" Background="#FFFFE0" Padding="20" Margin="410,95,0,0" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="116" Width="326">
            <TextBlock Name="TotalOrdersTextBlock" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Width="241" Height="72"/>
        </Border>
        <Border Name="BestSellingOrdeBorder" Background="#FFCCCB" Padding="20" Margin="787,92,0,0" BorderBrush="Black" BorderThickness="2" HorizontalAlignment="Left" VerticalAlignment="Top" Height="116" Width="326">
            <TextBlock Name="BestSellingProductTextBlock" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Top" Width="222" Height="66" Margin="0,3,0,0"/>
        </Border>
        <Frame Name="MainFrame" Margin="0,95,0,-45"/>
    </Grid>
</Page>
