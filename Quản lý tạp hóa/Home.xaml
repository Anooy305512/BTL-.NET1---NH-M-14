      xmlns:local="clr-namespace:Quản_lý_tạp_hóa"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Home"
      Loaded="Window_Loaded">

    <Grid>
        <!-- Gọi MenuControl1 -->
        <local:MenuControl1 VerticalAlignment="Top" Margin="0,20,0,0"/>
