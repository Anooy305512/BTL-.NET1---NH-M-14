<Window x:Class="Quản_lý_tạp_hóa.Qlhoadon"
                xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Quản Lý Nhà Cung Ứng" Height="450" Width="800">

    <Grid>

        <TextBox Name="SearchTextBox" Width="200" Height="30" Margin="10,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" />
        <Button Name="SearchButton" Content="Tìm kiếm" Width="100" Height="30" Margin="220,10,0,0" VerticalAlignment="Top" HorizontalAlignment="Left" Click="SearchButton_Click"/>



        <Button Name="DeleteButton" Content="Xóa" Height="29" Margin="514,12,0,0" Click="DeleteButton_Click" RenderTransformOrigin="0.599,0.986" HorizontalAlignment="Left" VerticalAlignment="Top" Width="109"/>
        <Button Name="DetailButton" Content="Chi tiết hóa đơn" Margin="371,11,0,0" Click="DetailButton_Click" HorizontalAlignment="Left" VerticalAlignment="Top" Height="31" Width="100" />



        <!-- DataGrid để hiển thị danh sách nhà cung ứng -->
        <DataGrid Name="OrdersDataGrid" VerticalAlignment="Center" Height="280" Margin="10,0,19,0" AutoGenerateColumns="True" />


    </Grid>

</Window>