<Window x:Class="Quản_lý_tạp_hóa.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MainWindow" Height="350" Width="525">
    <Grid>
        <!-- Menu điều hướng -->
        <Menu VerticalAlignment="Top">
            <MenuItem Header="Thu ngân" Click="ThunganMenu_Click"/>
            <MenuItem Header="Sản Phẩm" Click="ProductManagementMenu_Click"/>
            <MenuItem Header="Nhà cung ứng" Click="SupplierManagementMenu_Click"/>
            <MenuItem Header="Hóa đơn" Click="OrderManagementMenu_Click"/>
            <MenuItem Header="Doanh thu" Click="DoanhthuManagementMenu_Click"/> 
            

        </Menu>

        <!-- Nội dung hiển thị -->
        <Frame x:Name="MainContentFrame" NavigationUIVisibility="Hidden" Margin="10,30,10,10"/>
    </Grid>
</Window>
