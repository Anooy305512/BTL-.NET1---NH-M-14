<Window x:Class="Quản_lý_tạp_hóa.Log"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Đăng Nhập" Height="300" Width="400">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="250">
            <TextBlock Text="Tên người dùng" Margin="5"/>
            <TextBox x:Name="UsernameTextBox" Margin="5"/>

            <TextBlock Text="Mật khẩu" Margin="5"/>
            <PasswordBox x:Name="PasswordBox" Margin="5"/>

            <Button Content="Đăng nhập" Click="LoginButton_Click" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
